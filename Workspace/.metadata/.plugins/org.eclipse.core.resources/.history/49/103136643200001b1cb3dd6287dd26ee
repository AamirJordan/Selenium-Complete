package com.alphabet.gmail.testngtopic;

import java.util.concurrent.TimeUnit;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.Assert;
import org.testng.Reporter;
import org.testng.annotations.Test;

public class TC021 {		//		Assertion Failure

	@Test
	public void testValidLogin()
	{
		
		System.setProperty("webdriver.chrome.driver", "./drivers/chromedriver.exe");
		WebDriver driver = new ChromeDriver();
		driver.manage().window().maximize();
		driver.manage().timeouts().implicitlyWait(20, TimeUnit.SECONDS);
		driver.get("https://demo.actitime.com");
		driver.findElement(By.id("username")).sendKeys("admin");
		driver.findElement(By.name("pwd")).sendKeys("manager");
		driver.findElement(By.id("loginButton")).click();
		Assert.assertEquals(driver.getTitle(), "actiTIME - Enter Time-Track");
		Reporter.log(driver.getTitle(), true);		/*		if assertion is true nothing happens for the purpose of noticing 
															and the code continues to execute. If Assertion fails the code stops there and then  */
		Thread.sleep(5000);
		driver.close();
		
	}
	
}
